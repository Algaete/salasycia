					<img src="/icvk.png" alt="ICVK" class="h-10 mx-auto transition hover:scale-110" />
					<img src="/consorcioandino.png" alt="Consorcio Andino" class="h-14 mx-auto transition hover:scale-110" />
					<img src="/laleonera.png" alt="Empresa Eléctrica La Leonera S.A." class="h-10 mx-auto transition hover:scale-110" />
					<img src="/inia.png" alt="INIA" class="h-14 mx-auto transition hover:scale-110" />
					<img src="/coopeumo.png" alt="Coopeumo" class="h-12 mx-auto transition hover:scale-110" />
					<img src="/electrored.png" alt="Electrored" class="h-10 mx-auto transition hover:scale-110" />
					<img src="/concredicoop.png" alt="Concredicoop" class="h-12 mx-auto transition hover:scale-110" />
					<img src="/alamedamaipu.png" alt="Cooperativa Alameda Maipú" class="h-14 mx-auto transition hover:scale-110" />
					<img src="/stll.png" alt="STLL Sistema de Transmisión de Los Lagos" class="h-12 mx-auto transition hover:scale-110" />
				</div>
			</div>
		</section>

		<!-- Indicadores Económicos -->
		<section id="indicadores" class="py-16 bg-gray-50">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
				<div class="text-center mb-12">
					<h3 class="text-3xl font-bold text-gray-900 mb-4">Indicadores Económicos</h3>
					<p class="text-lg text-gray-600 max-w-3xl mx-auto">
						Información actualizada de los principales indicadores económicos de Chile
					</p>
				</div>
				
				<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-5 gap-6" id="indicadoresContainer">
					<!-- Indicadores se cargarán dinámicamente -->
					<div class="bg-white p-6 rounded-lg shadow-md text-center">
						<div class="animate-pulse">
							<div class="h-4 bg-gray-200 rounded mb-2"></div>
							<div class="h-8 bg-gray-200 rounded mb-2"></div>
