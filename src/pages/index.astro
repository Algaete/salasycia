		</section>

		<!-- Team Section -->
		<section id="equipo" class="py-16 bg-white">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
				<div class="text-center mb-12">
					<h3 class="text-3xl font-bold text-gray-900 mb-4">Nuestro Equipo Profesional</h3>
