		<script>
			document.addEventListener('DOMContentLoaded', function() {
				const indicadoresContainer = document.getElementById('indicadoresContainer');
				const ultimaActualizacion = document.getElementById('ultimaActualizacion');
				
				// Función para formatear números
				function formatearNumero(valor) {
					if (valor === 'N/A') return 'N/A';
					return new Intl.NumberFormat('es-CL', {
						minimumFractionDigits: 2,
						maximumFractionDigits: 2
					}).format(parseFloat(valor));
				}
				
				// Función para formatear fecha
				function formatearFecha(fecha) {
					if (fecha === 'N/A') return 'N/A';
					return new Date(fecha).toLocaleDateString('es-CL', {
						day: '2-digit',
						month: '2-digit',
						year: 'numeric'
					});
				}
				
				// Función para obtener iconos según el indicador
				function obtenerIcono(indicador) {
					const iconos = {
						uf: `<svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"></path>
